{
    "editor.formatOnSave": true,
    "python.pythonPath": "./venv/bin/python.exe",
    "python.sortImports.args": [
        "--profile=black"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=120"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
}